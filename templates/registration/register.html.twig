{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
  
    <link rel="stylesheet" href="https://bootswatch.com/5/morph/bootstrap.min.css">
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <br>
    <br>
    <div class="container custom-container">
        <form class="form-signin custom-form" method="post">
            <h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>

            {# <label for="inputEmail">Email</label> #}
            {{ form_row(registrationForm.email, { 'id': 'inputEmail', 'class': 'form-control mb-2', 'placeholder': 'Email', 'required': true, 'autofocus': true }) }}

            {# <label for="inputPassword">Password</label> #}
            {{ form_row(registrationForm.plainPassword, { 'id': 'inputPassword', 'class': 'form-control mb-2', 'placeholder': 'Password', 'required': true }) }}

            <div class="form-check mb-3">
                <div class="d-flex justify-content-center">
                    {{ form_row(registrationForm.agreeTerms, { 'label_attr': { 'class': 'form-check-label' }, 'attr': { 'class': 'form-check-input' } }) }}
                    {{ form_label(registrationForm.agreeTerms, 'I agree to the terms and conditions', { 'label_attr': { 'class': 'form-check-label' } }) }}
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <button class="btn btn-lg btn-primary" type="submit">S'inscrire</button>
            </div>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
{% endblock %}
