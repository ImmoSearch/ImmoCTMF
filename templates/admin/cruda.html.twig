                            data-libelle-bouton="Supprimer"
                            {# data-lien="{{ path('', {'id' : leAnnonce.id}) }}" #}
                            >


                                <img src="{{ asset('img/supp.png') }}" style="width: 27px">
                            </a>
                        </div>
                    </td>

                </tr>
            
        {% endfor %}
            </tbody>
    </table>

